<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Crud JS</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Estilos personalizados -->
  <link rel="stylesheet" href="styles/style.css">
  <!-- Favicon -->
  <link rel="icon" type="image/ico" href="images/icon_page.png" />
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css?family=Quicksand:600&display=swap" rel="stylesheet"> 
</head>
<body>

  <div class="container mt-5">
    <h2>CRUD Dinámico</h2>
    <form onsubmit="event.preventDefault(); onSubmit();" autocomplete="off">
      <div class="row g-3">
        <div class="col-md-4">
          <label for="nombre" class="form-label">Nombre:</label>
          <input type="text" class="form-control" id="nombre" placeholder="Escriba aquí" required>
        </div>
        <div class="col-md-4">
          <label for="apellido" class="form-label">Apellido:</label>
          <input type="text" class="form-control" id="apellido" placeholder="Escriba aquí" required>
        </div>
        <div class="col-md-4">
          <label for="pais" class="form-label">País:</label>
          <input type="text" class="form-control" id="pais" placeholder="Escriba aquí" required>
        </div>
      </div>
      <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    </form>

    <div class="tablita mt-5">
      <h2>Lista de Usuarios</h2>
      <table class="table table-striped table-bordered" id="tabla">
        <thead class="table-dark">
          <tr> 
            <th>Nombre</th> 
            <th>Apellido</th>
            <th>País</th>
            <th>Opciones</th>
          </tr>
        </thead>
        <tbody>
        </tbody>
      </table>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIiEeHz"
    crossorigin="anonymous"></script>
  <script src="js/crud.js"></script>
</body>
</html>
